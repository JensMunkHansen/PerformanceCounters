{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "build/${presetName}",
            "generator": "Ninja Multi-Config",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;Asan"
            }
        },
        {
            "name": "linux-gcc",
            "inherits": "default",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "BUILD_TESTING": "ON",
                "BUILD_EXAMPLES": "ON",
                "CMAKE_PREFIX_PATH": "${sourceDir}/${hostSystemName}/gcc/install"
            }
        },
        {
            "name": "linux-gcc-ci",
            "inherits": "linux-gcc",
            "cacheVariables": {}
        },
        {
            "name": "linux-gcc-asan",
            "inherits": "linux-gcc",
            "cacheVariables": {
                "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
                "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address"
            }
        },
        {
            "name": "linux-clang",
            "inherits": "default",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_PREFIX_PATH": "${sourceDir}/${hostSystemName}/clang/install"
            }
        },
        {
            "name": "linux-clang-ci",
            "inherits": "linux-clang",
            "cacheVariables": {}
        },
        {
            "name": "linux-clang-asan",
            "inherits": "linux-clang",
            "cacheVariables": {
                "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
                "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address"
            }
        },
        {
            "name": "windows-msvc",
            "inherits": "default",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl",
                "CMAKE_PREFIX_PATH": "${sourceDir}/${hostSystemName}/msvc/install"
            }
        },
        {
            "name": "windows-msvc-ci",
            "inherits": "windows-msvc",
            "cacheVariables": {}
        },
        {
            "name": "windows-msvc-asan",
            "inherits": "windows-msvc",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/EHsc /MD /Zi /fsanitize=address",
                "CMAKE_C_FLAGS": "/fsanitize=address",
                "CMAKE_EXE_LINKER_FLAGS": "/INFERASANLIBS",
                "CMAKE_SHARED_LINKER_FLAGS": "/INFERASANLIBS",
                "CMAKE_PREFIX_PATH": "${sourceDir}/${hostSystemName}/msvc-asan/install"
            }
        },
        {
            "name": "windows-clangcl",
            "inherits": "default",
            "displayName": "Windows CLANG-CL",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl",
                "CMAKE_PREFIX_PATH": "${sourceDir}/${hostSystemName}/clangcl/install"
            }
        },
        {
            "name": "windows-clangcl-ci",
            "inherits": "windows-clangcl",
            "cacheVariables": {}
        }
    ],
    "buildPresets": [
        {
            "name": "Debug",
            "configurePreset": "linux-gcc",
            "configuration": "Debug"
        },
        {
            "name": "Release",
            "configurePreset": "linux-gcc",
            "configuration": "Release"
        },
        {
            "name": "Debug-clang",
            "configurePreset": "linux-clang",
            "configuration": "Debug"
        },
        {
            "name": "Release-clang",
            "configurePreset": "linux-clang",
            "configuration": "Release"
        },
        {
            "name": "Asan",
            "configurePreset": "linux-gcc-asan",
            "configuration": "Release"
        },
        {
            "name": "Asan-clang",
            "configurePreset": "linux-clang-asan",
            "configuration": "Release"
        },
        {
            "name": "Debug-windows",
            "configurePreset": "windows-msvc",
            "configuration": "Debug"
        },
        {
            "name": "Release-windows",
            "configurePreset": "windows-msvc",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "core-test",
            "description": "Enable output on failure",
            "configurePreset": "linux-gcc",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-clang",
            "description": "Enable output on failure",
            "configurePreset": "linux-clang",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-gcc-ci",
            "description": "CI tests for GCC",
            "configurePreset": "linux-gcc-ci",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-clang-ci",
            "description": "CI tests for Clang",
            "configurePreset": "linux-clang-ci",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-asan",
            "description": "Asan tests for GCC",
            "configurePreset": "linux-gcc-asan",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-asan-clang",
            "description": "Asan tests for Clang",
            "configurePreset": "linux-clang-asan",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-windows",
            "description": "Tests for Windows MSVC",
            "configurePreset": "windows-msvc",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-windows-ci",
            "description": "CI tests for Windows MSVC",
            "configurePreset": "windows-msvc-ci",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-windows-clangcl",
            "description": "Tests for Windows Clang-CL",
            "configurePreset": "windows-clangcl",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "core-test-windows-clangcl-ci",
            "description": "CI tests for Windows Clang-CL",
            "configurePreset": "windows-clangcl-ci",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
